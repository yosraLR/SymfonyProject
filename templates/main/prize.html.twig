{% extends 'base_register.html.twig' %}

{% block title %}Create Prize{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="title">Create Prize</h1>

        {{ form_start(prizeForm) }}

        <div class="form-group">
            {{ form_label(prizeForm.name, 'Prize Name', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(prizeForm.name, {'attr': {'class': 'form-input'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(prizeForm.items, 'Items', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(prizeForm.items, {'attr': {'class': 'form-input'}}) }}
        </div>

        <button class="btn btn-primary" type="submit" style="margin-left:9px;">Create Prize</button>

        {{ form_end(prizeForm) }}
    </div>
     <style>
    body{
        background-image:url('https://c1.wallpaperflare.com/preview/890/402/528/gift-jeans-fashion-pack.jpg');
        background-size: cover
                }
    .container {
        background-color: rgba(255, 255, 255, 0);
        padding: 20px;
        margin: 0 auto;
        max-width: 400px;
    }
    .title {
        color: #f4f4f4;
        text-align: center;
        margin-bottom: 20px;
    }
    .form-label {
        display: block;
        margin-bottom: 5px;
        color: white;
    }
    </style>
{% endblock %}
