{% extends 'base_register.html.twig' %}

{% block title %}Participation{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4">Participation Form</h1>
                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_label(form.firstName) }}
                    <div class="input-group">
                        {{ form_widget(form.firstName, {'attr': {'class': 'form-control', 'style': 'width: 100%'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.lastName) }}
                    <div class="input-group">
                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 'style': 'width: 100%'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.address) }}
                    <div class="input-group">
                        {{ form_widget(form.address, {'attr': {'class': 'form-control', 'style': 'width: 100%'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.phone) }}
                    <div class="input-group">
                        {{ form_widget(form.phone, {'attr': {'class': 'form-control', 'style': 'width: 100%'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.email) }}
                    <div class="input-group">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'style': 'width: 100%'}}) }}
                    </div>
                </div>
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary" style="width: 100%">Submit</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
